<div id="register_modal_box" class="modal">
  <span onclick="document.getElementById('register_modal_box').style.display='none'"
        class="close" title="Close Modal">&times;</span>
    <div class="switcher">
        <div class="sign_in_tab">
            <a href="javascript:switchTabs('sign_in');" id="sign_up_modal_link" target="_self">Sign In</a>
        </div>
        <div class="sign_up_tab">
            <a href="javascript:switchTabs('sign_up');" id="sign_up_modal_link" target="_self">Sign Up</a>
        </div>
    </div>
    <!-- Modal Content -->
    <form id="sign_in_form" class="modal-content animate" method="post" action="/signin">
        <div class="imgcontainer">
            <img src="/images/655_w_irving.jpg" alt="Avatar" class="avatar">
        </div>

        <div class="container">
            <div class="error_msg"></div>
            <div class="form_email">
                <label for="email"><b>Email</b></label>
                <input type="text" placeholder="Enter Email" name="email" required>
                <div class="error_msg"></div>
            </div>
            <div class="form_password">
                <label for="psw"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="password" required>
                <div class="error_msg"></div>
            </div>
            <button type="submit" id="signin_button">Sign In</button>
            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
        </div>

        <div class="container" style="background-color:#f1f1f1">
            <button type="button" onclick="document.getElementById('register_modal_box').style.display='none'" class="cancelbtn">Cancel</button>
            <span class="psw">Forgot <a href="#">password?</a></span>
        </div>
    </form>

    <form id="sign_up_form" class="modal-content animate" action="/signup" method="post" style="display: none;">
        <div class="imgcontainer">
            <img src="/images/655_w_irving.jpg" alt="Avatar" class="avatar">
        </div>

        <div class="container">
            <div class="form_username">
                <label for="uname"><b>Username</b></label>
                <input type="text" placeholder="Enter Username" name="username" required>
                <div class="error_msg"></div>
            </div>
            <div class="form_email">
                <label for="email"><b>Email</b></label>
                <input type="text" placeholder="Enter Email" name="email" required>
                <div class="error_msg"></div>
            </div>
            <div class="form_password">
                <label for="psw"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="password" required>
                <div class="error_msg"></div>
            </div>
            <div class="form_passwordmatch">
                <label for="pswmatch"><b>Confirm Password</b></label>
                <input type="password" placeholder="Enter Password" name="passwordmatch" required>
                <div class="error_msg"></div>
            </div>
            <button type="submit" id="signup_button">Sign Up</button>
            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
        </div>

        <div class="container" style="background-color:#f1f1f1">
            <span class="psw">Forgot <a href="#">password?</a></span>
        </div>
    </form>
</div>

<script>
    // Get the modal
    let modal = document.getElementById('register_modal_box');

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    };

    $('#signup_button').on('click', function(e){
        e.preventDefault();
        e.stopPropagation();
        $.ajax({
            type: "POST",
            url: '/signup',
            data: $( "#sign_up_form" ).serialize()
        }).done(function(data){
            eval($(data).html());
        });
    });

    $('#signin_button').on('click', function(e){
        e.preventDefault();
        e.stopPropagation();
        $.ajax({
            type: "POST",
            url: '/signin',
            data: $( "#sign_in_form" ).serialize()
        }).done(function(data){
            eval($(data).html());
        });
    });

    function switchTabs(action){
        if(action == 'sign_in'){
            $('#sign_in_form').show();
            $('#sign_up_form').hide();
        }
        else if(action == 'sign_up'){
            $('#sign_in_form').hide();
            $('#sign_up_form').show();
        }
    }

    function openRegisterModal(action){
        document.getElementById('register_modal_box').style.display='block';
        switchTabs(action);
    }
</script>