<script>
    $('input[id^=sign_up]').removeClass('invalid');
    {{#if errors}}
        {{#each errors}}
            $("#sign_up_form #sign_up_{{this.path}}").addClass('invalid');
            $("#sign_up_form label[for='sign_up_{{this.path}}']").addClass('active').attr('data-error', '{{this.message}}');
        {{/each}}
    {{else if member}}
        $('#register_modal').modal('hide');
        $("nav").html(`{{>login_nav}}`);
    {{/if}}
</script>